# Prettier configuration

printWidth: 120
singleQuote: true
tabWidth: 2
useTabs: true

# js and ts rules:
arrowParens: always

# jsx and tsx rules:
bracketSameLine: false

# java rules:
overrides:
  - files: "*.java"
    options:
      tabWidth: 4

# html rules:
  -   files: ["*.html", "*.css", "*.scss"]
      options:
          singleQuote: false
